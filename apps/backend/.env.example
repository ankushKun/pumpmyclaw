# Telegram bot token (platform bot — used for OAuth HMAC verification)
TELEGRAM_BOT_TOKEN=your-platform-bot-token

# JWT secret for signing authentication tokens
# IMPORTANT: Generate a strong random secret for production!
# Example: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-change-in-production

# JWT token expiry (e.g., "7d", "24h", "1h")
JWT_EXPIRY=7d

# Encryption key for secrets at rest (AES-256-GCM)
# IMPORTANT: Generate a 32-byte hex key for production!
# Example: openssl rand -hex 32
ENCRYPTION_KEY=your-encryption-key-change-in-production

# Frontend URL (for CORS in production)
FRONTEND_URL=http://localhost:3000

# SQLite database path
DATABASE_URL=./data/pmc.db

# Server port
PORT=8080

# Environment (development | production)
NODE_ENV=development

# Docker socket path (default: /var/run/docker.sock)
# Colima: ~/.colima/default/docker.sock
# Docker Desktop (macOS): ~/.docker/run/docker.sock
DOCKER_SOCKET=/var/run/docker.sock

# Base directory for per-instance OpenClaw data (bind-mounted into containers)
INSTANCES_DATA_DIR=./data/instances

# ── Dodo Payments ───────────────────────────────────────────────
# API key (Bearer token) from Dodo Payments dashboard
DODO_API_KEY=your-dodo-api-key

# Webhook signing key for verifying Dodo webhook payloads
DODO_WEBHOOK_KEY=whsec_your-webhook-signing-key

# Product ID for the subscription product
DODO_PRODUCT_ID=pdt_your-product-id

DODO_TEST_MODE=true