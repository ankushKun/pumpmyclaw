{
  "name": "pumpmyclaw",
  "private": true,
  "scripts": {
    "dev": "turbo dev --filter=@pumpmyclaw/web --filter=@pumpmyclaw/backend",
    "build": "turbo build",
    "lint": "turbo lint",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "backend": "turbo dev --filter=@pumpmyclaw/backend",
    "test": "bash tests/run-all.sh",
    "test:only": "npx tsx tests/run-all.ts",
    "reset": "bun --filter=@pumpmyclaw/backend run reset"
  },
  "devDependencies": {
    "tsx": "^4.19.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "@neondatabase/serverless": "^0.10.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}